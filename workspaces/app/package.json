{
    "name": "@sepraisal/app",
    "version": "0.0.1",
    "description": "SE Praisal web application.",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "author": "Akuukis",
    "repository": {
        "type": "git",
        "url": "https://gitlab.com/space-engineers-community/sepraisal"
    },
    "license": "GPL-3.0",
    "private": true,
    "scripts": {
        "start": "yarn run build && yarn run watch:hot",
        "analyze": "mkdir -p tmp && webpack-cli --profile --json --production > tmp/stats.json && webpack-bundle-analyzer --no-open tmp/stats.json ./dist",
        "build": "tsc -v && tsc -b tsconfig-src.json",
        "clean": "rm -rf coverage lib tmp tsconfig-src.tsbuildinfo",
        "deploy": "yarn run package:prod; aws --profile SEPraisal s3 --region eu-west-1 sync dist s3://sepraisal --acl public-read",
        "lint": "tslint -p tsconfig-src.json",
        "lint:fix": "yarn run lint --fix",
        "lint:summary": "yarn lint:verbose | grep ERROR | sed -r 's/ERROR: \\((.*)\\)\\s\\/.*/\\1/' | sort | uniq -c | sort -nr",
        "lint:verbose": "yarn run lint -t verbose",
        "package": "webpack-dev-server --mode development",
        "package:prod": "webpack --mode production",
        "test": "echo 'no tests.'",
        "test:coverage": "echo 'no tests.'",
        "watch": "yarn run watch:src",
        "watch:hot": "webpack-dev-server --mode development --hot",
        "watch:src": "tsc -b tsconfig-src.json --watch  # --preserveWatchOutput",
        "watch:test": "yarn run test --watch"
    },
    "dependencies": {
        "@material-ui/core": "^4.0.0-alpha.8",
        "@material-ui/icons": "^4.0.0-alpha.8",
        "@material-ui/styles": "^4.0.0-alpha.8",
        "@sepraisal/common": "^0.0.1",
        "@sepraisal/praisal": "^0.0.1",
        "@types/react-dom": "^16.8.4",
        "bignumber.js": "^9.0.0",
        "classnames": "^2.2.6",
        "history": "^4.9.0",
        "mobx": "^5.13.0",
        "mobx-react-lite": "^1.2.0",
        "mobx-react-router": "4.0.7",
        "moment": "^2.24.0",
        "pako": "^1.0.10",
        "react": "^16.8.6",
        "react-dom": "^16.8.6",
        "react-dropzone": "^10.1.3",
        "react-router-dom": "^5.0.0",
        "react-table": "^6.9.2",
        "react-vega": "^6.0.1",
        "vega": "^5.3.5"
    },
    "devDependencies": {
        "@babel/core": "^7.4.3",
        "@babel/plugin-proposal-class-properties": "^7.4.0",
        "@babel/plugin-proposal-decorators": "^7.4.0",
        "@babel/polyfill": "^7.4.3",
        "@babel/preset-env": "^7.4.3",
        "@babel/preset-react": "^7.0.0",
        "@babel/preset-typescript": "^7.3.3",
        "@hot-loader/react-dom": "^16.8.6",
        "@types/pako": "^1.0.1",
        "@types/react": "^16.8.13",
        "@types/react-hot-loader": "^4.1.0",
        "@types/react-router-dom": "^4.3.2",
        "@types/vega": "^3.2.0",
        "@types/webpack": "^4.4.27",
        "@types/webpack-env": "^1.13.9",
        "babel-loader": "^8.0.5",
        "css-loader": "^2.1.1",
        "file-loader": "^3.0.1",
        "fork-ts-checker-webpack-plugin": "^1.2.0",
        "html-loader": "^0.5.5",
        "html-webpack-plugin": "^3.2.0",
        "react-hot-loader": "^4.8.4",
        "style-loader": "^0.23.1",
        "svg-loader": "^0.0.2",
        "utility-types": "^3.7.0",
        "webpack": "^4.30.0",
        "webpack-bundle-analyzer": "^3.3.2",
        "webpack-cli": "^3.3.1",
        "webpack-dev-server": "^3.3.1"
    }
}
