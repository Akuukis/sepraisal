{
    "name": "@sepraisal/app",
    "version": "0.0.1",
    "description": "SE Praisal web application.",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "author": "Akuukis",
    "repository": {
        "type": "git",
        "url": "https://gitlab.com/space-engineers-community/sepraisal"
    },
    "license": "GPL-3.0",
    "private": true,
    "scripts": {
        "start": "yarn run build && yarn run watch:hot",
        "analyze": "mkdir -p tmp && webpack-cli --profile --json --production > tmp/stats.json && webpack-bundle-analyzer --no-open tmp/stats.json ./dist",
        "build": "tsc -v && tsc -b",
        "clean": "rm -rf coverage lib tmp tsconfig.tsbuildinfo",
        "deploy": "yarn run package:prod && yarn run deploy:upload && yarn run deploy:recache",
        "deploy:upload": "yarn run env-cmd --use-shell \"aws --profile SEPraisal s3 --region eu-west-1 sync dist \\$BUCKET_URL --acl public-read\"",
        "deploy:recache": "yarn run env-cmd --use-shell \"aws --profile SEPraisal cloudfront create-invalidation --distribution-id \\$DISTRIBUTION_ID --paths '/*'\"",
        "lint": "tslint -p tsconfig.json",
        "lint:fix": "yarn run lint --fix",
        "lint:summary": "yarn lint:verbose | grep ERROR | sed -r 's/ERROR: \\((.*)\\)\\s\\/.*/\\1/' | sort | uniq -c | sort -nr",
        "lint:verbose": "yarn run lint -t verbose",
        "package": "webpack-dev-server --mode development",
        "package:prod": "webpack --mode production",
        "test": "echo 'no tests :('",
        "test:coverage": "yarn run test --coverage",
        "watch": "yarn run watch:src",
        "watch:hot": "webpack-dev-server --mode development --hot",
        "watch:src": "tsc -b --watch  # --preserveWatchOutput",
        "watch:test": "yarn run test --watch"
    },
    "dependencies": {
        "@material-ui/core": "^4.9.5",
        "@material-ui/icons": "^4.9.1",
        "@material-ui/lab": "4.0.0-alpha.44",
        "@material-ui/styles": "^4.9.0",
        "@sepraisal/common": "^0.0.1",
        "@sepraisal/praisal": "^0.0.1",
        "bignumber.js": "^9.0.0",
        "classnames": "^2.2.6",
        "clipboard-polyfill": "^2.8.6",
        "fast-deep-equal": "^3.1.1",
        "history": "^4.10.1",
        "mobx": "^5.15.4",
        "mobx-react-lite": "^1.5.2",
        "mobx-react-router": "4.1.0",
        "moment": "^2.24.0",
        "pako": "^1.0.11",
        "react": "^16.13.0",
        "react-dom": "^16.13.0",
        "react-dropzone": "^10.2.1",
        "react-router-dom": "^5.1.2",
        "react-sortablejs": "^2.0.11",
        "react-table": "^6.11.4",
        "react-vega": "6.0.1",
        "react-window": "^1.8.5",
        "use-error-boundary": "^1.2.0",
        "vega": "5.9.2"
    },
    "devDependencies": {
        "@babel/core": "^7.8.6",
        "@babel/plugin-proposal-class-properties": "^7.8.3",
        "@babel/plugin-proposal-decorators": "^7.8.3",
        "@babel/plugin-proposal-nullish-coalescing-operator": "^7.8.3",
        "@babel/plugin-proposal-optional-chaining": "^7.8.3",
        "@babel/polyfill": "^7.8.3",
        "@babel/preset-env": "^7.8.6",
        "@babel/preset-react": "^7.8.3",
        "@babel/preset-typescript": "^7.8.3",
        "@hot-loader/react-dom": "^16.12.0",
        "@types/classnames": "^2.2.10",
        "@types/mongodb": "^3.5.16",
        "@types/pako": "^1.0.1",
        "@types/react": "^16.9.23",
        "@types/react-dom": "^16.9.5",
        "@types/react-router-dom": "^5.1.3",
        "@types/react-window": "^1.8.2",
        "@types/webpack": "^4.41.7",
        "@types/webpack-env": "^1.15.1",
        "babel-loader": "^8.0.6",
        "css-loader": "^3.4.2",
        "dotenv": "^8.2.0",
        "file-loader": "^5.1.0",
        "fork-ts-checker-webpack-plugin": "^4.0.5",
        "html-loader": "^0.5.5",
        "html-webpack-plugin": "^3.2.0",
        "react-hot-loader": "^4.12.19",
        "style-loader": "^1.1.3",
        "svg-loader": "^0.0.2",
        "utility-types": "^3.10.0",
        "webpack": "^4.42.0",
        "webpack-bundle-analyzer": "^3.6.0",
        "webpack-cli": "^3.3.11",
        "webpack-dev-server": "^3.10.3"
    }
}
