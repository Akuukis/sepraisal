{
    "name": "@sepraisal/lambdas",
    "version": "0.0.1",
    "description": "SE Praisal - Lambdas.",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "author": "Akuukis",
    "repository": {
        "type": "git",
        "url": "https://gitlab.com/space-engineers-community/sepraisal"
    },
    "license": "GPL-3.0",
    "private": true,
    "scripts": {
        "start": "yarn run build && yarn run lint && yarn run test",
        "build": "tsc -v && tsc -b tsconfig-src.json",
        "clean": "rm -rf coverage lib tmp tsconfig-src.tsbuildinfo",
        "deploy": "serverless deploy",
        "lint": "tslint -p tsconfig-src.json",
        "lint:fix": "yarn run lint --fix",
        "lint:summary": "yarn lint:verbose | grep ERROR | sed -r 's/ERROR: \\((.*)\\)\\s\\/.*/\\1/' | sort | uniq -c | sort -nr",
        "lint:verbose": "yarn run lint -t verbose",
        "test": "echo 'no tests :('",
        "test:coverage": "yarn run test --coverage",
        "watch": "yarn run watch:src",
        "watch:src": "tsc -b tsconfig-src.json --watch  # --preserveWatchOutput",
        "watch:test": "yarn run test --watch"
    },
    "dependencies": {
        "@sepraisal/common": "^0.0.1",
        "aws-lambda": "^0.1.2",
        "mongodb": "^3.3.2"
    },
    "devDependencies": {
        "@types/aws-lambda": "^8.10.31",
        "@types/node": ">= 10",
        "@types/mongodb": "^3.3.1",
        "serverless": "^1.51.0",
        "serverless-webpack": "^5.3.1",
        "ts-loader": "^6.0.4",
        "utility-types": "^3.7.0"
    }
}
