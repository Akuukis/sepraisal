{
    "name": "@sepraisal/server",
    "version": "0.0.1",
    "description": "SE Praisal - Server",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "author": "Akuukis",
    "repository": {
        "type": "git",
        "url": "https://gitlab.com/space-engineers-community/sepraisal"
    },
    "license": "GPL-3.0",
    "private": true,
    "scripts": {
        "start": "yarn run build && yarn run lint && yarn run test",
        "build": "tsc -v && tsc",
        "clean": "rm -rf coverage lib tmp tsconfig.tsbuildinfo",
        "launch": "yarn run ts-node -r dotenv/config src/index.ts",
        "deploy": "serverless deploy",
        "lint": "tslint",
        "lint:fix": "yarn run lint --fix",
        "lint:summary": "yarn lint:verbose | grep ERROR | sed -r 's/ERROR: \\((.*)\\)\\s\\/.*/\\1/' | sort | uniq -c | sort -nr",
        "lint:verbose": "yarn run lint -t verbose",
        "test": "echo 'no tests :('",
        "test:coverage": "yarn run test --coverage",
        "watch": "yarn run watch:src",
        "watch:src": "tsc --watch  # --preserveWatchOutput",
        "watch:test": "yarn run test --watch"
    },
    "dependencies": {
        "@sepraisal/common": "^0.0.1",
        "aws-lambda": "^1.0.5",
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "mongodb": "^3.5.4"
    },
    "devDependencies": {
        "@types/aws-lambda": "^8.10.46",
        "@types/cors": "^2.8.6",
        "@types/express": "^4.17.2",
        "@types/mongodb": "^3.5.0",
        "@types/node": ">= 10",
        "serverless": "^1.65.0",
        "serverless-webpack": "^5.3.1",
        "ts-loader": "^6.2.1",
        "ts-node": "^8.6.2",
        "utility-types": "^3.10.0"
    }
}
